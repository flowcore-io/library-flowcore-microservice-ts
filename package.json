{
  "name": "@flowcore/microservice",
  "license": "MIT",
  "version": "1.0.1",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    "./config": {
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "require": "./dist/logger.cjs"
    }
  },
  "types": "./index.d.ts",
  "files": [
    "dist/*",
    "index.d.ts",
    "config.d.ts",
    "logger.d.ts"
  ],
  "scripts": {
    "clean:dist": "rimraf dist/",
    "build:types": "tsc src/*.ts --declarationDir dist/ --emitDeclarationOnly --declaration --experimentalDecorators --emitDecoratorMetadata",
    "build:lib": "vite build",
    "dev": "npm-run-all --parallel \"build:types --watch\" \"build:lib --watch\"",
    "build": "yarn run clean:dist && yarn run build:lib && yarn run build:types",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@jbiskur/nestjs-test-utilities": "3.11.0",
    "@nestjs/common": "9.2.1",
    "@nestjs/core": "9.2.1",
    "@nestjs/microservices": "9.2.1",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/testing": "9.2.1",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.15",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "commitizen": "4.2.6",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4",
    "vite": "4.0.1",
    "vite-plugin-dts": "1.7.1",
    "vite-plugin-externalize-deps": "0.4.0",
    "zod": "3.20.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@jbiskur/nestjs-async-module": "3.11.0",
    "@jbiskur/nestjs-options-module-factory": "3.11.0",
    "@types/dotenv": "8.2.0",
    "@types/lodash": "4.14.191",
    "dotenv": "16.0.3",
    "lodash": "4.17.21",
    "nest-winston": "1.8.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.0",
    "winston": "3.8.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "zod": "^3.20.2"
  }
}
